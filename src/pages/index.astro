---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import Badge from "../components/Badge.astro";
---

<Layout title="Welcome to Astro.">
	<section class="w-full lg:w-[740px] mx-auto py-44">
		<main>
			<img
				class="rounded-full h-12 w-12"
				src="https://avatar.iran.liara.run/username?username=Seba+Sanhue"
				alt="Seba Foto"
			/>
			<h1 class="text-white text-5xl font-bold flex flex-row gap-x-4 pb-10">
				Hey, Soy Sebastián Sanhueza Tapia
				<a
					href="https://www.linkedin.com/in/sebastiansanhuezatapia/"
					target="_blank"
					rel="noopener"
					class="flex justify-center items-center"
				>
					<Badge>Disponible para trabajar</Badge>
				</a>
			</h1>
			<h2 class="text-2xl text-wrap">
				<span class="text-yellow-200/90 opacity-80">+1 año de experiencia.</span>
				<span class="text-red-100/90">
					Desarrollador Web y Estratega digital (SEO y Ads en google y RRSS)
				</span>
				<span>Y además bueno para el catre.</span>
			</h2>
		</main>
	</section>
</Layout>
